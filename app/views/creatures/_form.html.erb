<%
submit_label ||= creature.new_record? ? "Save" : "Update"
%>

<%= form_with model: creature do |form| %>
  <div class="flex flex-col w-1/2 gap-3">
    <div class="flex flex-row items-center gap-2">
      <div class="w-1/3 text-sm text-right font-semibold">
        <%= form.label :name %>
      </div>
      <div class="w-2/3">
        <%= form.text_field :name, { class: "rounded-md" } %>
      </div>
    </div>

    <div class="flex flex-row items-center gap-2">
      <div class="w-1/3 text-sm text-right font-semibold">
        <%= form.label :kind %>
      </div>
      <div class="w-2/3">
        <%= form.select :kind, ['aire', 'agua', 'tierra'], { selected: 'tierra' }, { class: "rounded-md" } %>
      </div>
    </div>

    <div class="flex flex-row items-center gap-2">
      <div class="w-1/3 text-sm text-right font-semibold">
        <%= form.label :description %>
      </div>
      <div class="w-2/3">
        <%= form.text_area :description, { class: "rounded-md" } %>
      </div>
    </div>

    <div class="pt-3 flex flex-row items-center gap-2 w-min place-self-center">
      <%= form.submit submit_label, { class: "py-2 px-5 bg-indigo-500 rounded-full text-white text-sm font-semibold" } %>
      <%= link_to "Cancel", :back, { class: "py-2 px-5 bg-white rounded-full text-indigo-500 text-sm font-semibold border border-indigo-500" } %>
    </div>
  </div>
<% end %>
